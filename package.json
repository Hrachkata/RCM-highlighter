{
  "name": "xmljs-rcm-highlight",
  "displayName": "XML-JS RCM highlighter",
  "description": "An extension that enables highlighting specifically for RCM development.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/rcm.tmLanguage.json",
        "scopeName": "source.js.injection",
        "injectTo": [ "text.xml" ],
        "embeddedLanguages": {
            "meta.embedded.block.js": "javascript",
            "meta.embedded.attribute.js": "javascript"
        }
      }
    ],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
  },
	"scripts": {
		"watch": "node client/out/extension.js",
   	    "postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.11.0"
	},
	"keywords": [
		"multi-root ready"
	],
	"activationEvents": [
		"onLanguage:xml"
	],
	"main": "./client/src/client"
}
