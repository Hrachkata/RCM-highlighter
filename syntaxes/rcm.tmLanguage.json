{
    "scopeName": "source.rcm",
    "patterns": [
      {
        "include": "text.xml"
      }
    ],
    "comments": {
      "blockComment": ["<!--", "-->"]
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["<", ">"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}", "notIn": ["string", "comment"] },
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"],
      ["<", ">"]
    ],
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"],
      ["<", ">"]
    ]
  }
  